<% if driver_signed_in? %>
    <%= link_to "Sign out", destroy_driver_session_path, method: :delete %>
    <div ng-app="driver">
    <div class="view-container">
      <div ng-view class="view-frame animate-view"></div>
    </div>
    </div>
<% else %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, autofocus: true, :pattern => '/\A(0)[0-9]{9}\z/' %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "drivers/shared/links" %>
<% end %>
